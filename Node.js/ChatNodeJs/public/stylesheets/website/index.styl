@import "../nib"

global-reset()

body
    background #3D4043
    overflow hidden

body
input
textarea
button
    font-family 'Open Sans'
    font-size 16px
    color white

img
    border 0

a
    color white
    text-decoration none

    &:hover
        text-decoration underline

::selection
    background-color #29b1ff

.field
    background #515458
    border 1px solid rgba(255,255,255, 0.30)
    font-size 15px
    border-radius 3px
    padding 3px
    padding-bottom 30px
    outline 0
    box-sizing border-box
    width 100%

/* CHAT */
.chat 
    nav 
      text-align left
      margin 0 5%
      font-size 16px
      text-transform uppercase
      padding 2px 0

      a
          color #bbb
          margin 0 5px
          transition color .2s ease-out

          &.icon-mention 
            font-size 19px

            &.new
              color #29afff

          &:hover
            text-decoration none
            color white


    .chatbox
        padding 20px 5% 0

        .chatform
            position relative

            &.sending:after
                content " "
                absolute top left
                absolute bottom right
                background rgba(61, 64, 67, 0.6) url(/images/website/form-sending.gif) center center no-repeat
                z-index 9

            .publish
                background #29b1ff url(/images/website/submit-esquina.png) top left no-repeat
                position absolute
                right 0
                bottom 0
                padding 5px 20px
                font-size 12px
                text-transform uppercase
                padding-left 30px
                border-bottom-right-radius 3px

                span
                    margin-right 5px

    &.alternate
      #messages
        display none
      #mentions
        display block

        .borrar 
          display none !important

    #mentions
      display none

      &:empty:before
        color #bbb
        text-align center
        display block
        font-size 14px
        font-style italic
        content "AÃºn no tienes menciones"

    .messages
        position absolute
        overflow-y scroll
        -webkit-overflow-scrolling touch
        top 103px
        bottom 24px
        absolute right left


        .message
            padding 10px 0
            position relative
            overflow hidden
            text-shadow .5px .5px rgba(0, 0, 0, 0.4)
            border-left 7px solid transparent
            transition background-color .5s ease-out

            &.sameuser
              background #2e3032
              border-left 7px solid #29afff

            &.destacado
              .avatar
                &:after
                  content " "
                  background url(/images/website/staff.png)
                  width 14px
                  height 14px
                  display block
                  absolute bottom 1px right 1px

                img
                  border-color white

            .mention
              background #29B1FF
              border-radius 3px
              display inline-block
              margin-top 5px
              padding 2px

            .content
              font-size 13px
              line-height 15px
              margin 0 5px
              margin-left 51px

            .avatar
              float left
              position relative
              margin 0 10px

              img 
                display block
                border 1px solid rgba(255, 255, 255, 0.2)


            .user
              font-weight bold

            .time
              absolute right 25px top 
              color #bbb
              transition opacity .2s ease-out
              opacity 0

              small
                font-size 12px

            .borrar
              absolute top 5px right 5px
              font-size 15px
              color #bbb

              &:hover
                text-decoration none
                color white

              &.ready
                background-color red
                color white

            .icon-undo
              background rgba(0,0,0,.7)
              text-align center
              width 32px
              height 32px
              line-height 32px
              absolute left 10px top 10px
              transition opacity 0.2 ease-out
              opacity 0

              &:hover
                text-decoration none


              &:hover
                opacity 1

            &:hover
              .time
                opacity 1


/* LOGIN */
.dialog
    absolute top left
    absolute bottom right
    z-index 9
    display none

    &.show
        display -webkit-box
        display -moz-box
        display -ms-box
        display box
        box-pack center
        box-align center

    .overlay
      absolute top left
      absolute bottom right
      background rgba(255, 255, 255, 0.5)
      cursor pointer

    .panel
      background #3d4043
      padding 20px 15px
      box-shadow 3px 3px 0 #272b2e
      position relative

#login
      p
        margin-bottom 15px

      .panel
        text-transform uppercase
        font-size 18px

      a
        display inline-block
        font-size 15px
        padding 15px 8px
        padding-right 55px
        border 1px solid #5672b4
        cursor pointer
        transition border-color .5s ease-out
        background #3b5998
        background-position 140px center
        background-repeat no-repeat

        &:hover
          text-decoration none

        &.facebook
          margin-right 10px
          background-image url(/images/website/fb.png)

          &:hover
            border-color #8da5ec

        &.twitter
          background-color #00aee8
          border-color #49c9ff
          background-image url(/images/website/tt.png)

          &:hover
            border-color #9dffff
    
#encuesta
  .panel
    background-image url(/images/website/encuesta-top.png)
    background-image-position left top 
    background-repeat repeat-x
    padding-top 30px
    font-size 14px 

    form
      position relative

      &.sending:after
        content " "
        absolute top left
        absolute bottom right
        background rgba(61, 64, 67, 0.6) url(/images/website/form-sending.gif) center center no-repeat
        z-index 9

    .question
      overflow hidden
      margin-bottom 10px

      p
        float left

        &:last-child
          float right
          margin-left 30px

        span
          margin 0 7px

    .public
      font-size 11px
      color #b0b1b2

    .comment
      textarea
        font-size 14px

    .enviar
      text-align right
      margin-top 10px

      button
        background #333537
        border 0
        font-size 14px
        padding 5px 10px
        cursor pointer
        transition background-color .2s ease-out
        position relative
        right 10px

        &:after
          content " "
          position absolute
          right -10px
          border-left 10px solid #333537
          border-bottom 15px solid transparent
          border-top 14px solid transparent
          display block
          top 0
          transition border-color .2s ease-out

        &:hover
          background-color #1e2123

          &:after
            border-left-color #1e2123


/* FOOTER */

footer
    text-align right
    font-size 16px
    text-transform uppercase
    position absolute
    padding 2px 0
    bottom 0
    left 0 
    right 0

    a
        color #bbb
        margin 0 5px

        &.icon-mention 
          font-size 19px

        &:hover
          text-decoration none
          color white


@media screen and (max-width:458px)
  #login
    .panel
      padding 15px 10px
      font-size 15px

      p
        margin-bottom 10px

      a
        font-size 12px
        padding 12px 5px
        background-position 113px center
        padding-right 50px

        &.facebok
          margin-right 7px

